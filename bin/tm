#!/usr/bin/env bash
export PATH=/usr/local/bin:$PATH

# abort if we're already inside a TMUX session
[ "$TMUX" == "" ] || exit 0

# Set default session name
DEFAULT_NAME=$(uname)

# startup a "default" session if non currently exists
tmux has-session -t $DEFAULT_NAME 2> /dev/null \
  || tmux new-session -s $DEFAULT_NAME -d

# present menu for user to choose which workspace to open
IFS=$'\n'
PS3="Please choose your session: "
options=("New Session")
options+=($(tmux list-sessions -F '#S' 2> /dev/null))
options+=("Workspace - PAPSB-SYSTEM" \
  "ZSH" \
  "BASH" \
  "Cancel")
# options+=($(ls ~/dotfiles/tmux/*.tmuxrc))
echo "Available sessions"
echo "------------------"
echo " "
select opt in "${options[@]}"
do
  case $opt in
    "New Session")
      read -p "Enter new session name: " SESSION_NAME
      tmux new -s "$SESSION_NAME"
      break;;
    "Workspace - Dotfiles")
      tmux source-file ~/dotfiles/cofig/tmux/citycarpark.tmuxrc
      break;;
    "Workspace - PAPTT")
      tmux source-file ~/dotfiles/config/tmux/papsb.tmuxrc
      break;;
    "ZSH")
      zsh --login
      break;;
    "BASH")
      bash --login
      break;;
    "Cancel")
      exit;;
    *)
      tmux attach-session -t $opt
      break;;
  esac
done
