#!/usr/bin/env bash
export PATH=$PATH:/usr/local/bin

# abort if we're already inside a TMUX session
[ "$TMUX" == "" ] || exit 0
# startup a "default" session if non currently exists
tmux has-session -t default || tmux new-session -s default -d

# present menu for user to choose which workspace to open
PS3="Please choose your session: "
options=($(tmux list-sessions -F "#S" 2> /dev/null) \
  "New Session" \
  "Workspace - CITY-CAR-PARK" \
  "Workspace - PAPSB-SYSTEM" \
  "ZSH" \
  "Cancel")
echo "Available sessions"
echo "------------------"
echo " "
select opt in "${options[@]}"
do
  case $opt in
    "New Session")
      read -p "Enter new session name: " SESSION_NAME
      tmux new -s "$SESSION_NAME"
      break;;
    "Workspace - CITY-CAR-PARK")
      tmux source-file ~/dotfiles/tmux/citycarpark.tmuxrc
      break;;
    "Workspace - PAPSB-SYSTEM")
      tmux source-file ~/dotfiles/tmux/papsb.tmuxrc
      break;;
    "ZSH")
      zsh --login
      break;;
    "Cancel")
      exit;;
    *)
      tmux attach-session -t $opt
      break;;
  esac
done
